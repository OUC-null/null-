.box{
  width: 100%;
  height: 100vh;
  margin: 0 auto;
}

.box .page {
  width: 90%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.page .top{
  width: 90%;
  height: 450rpx;
  border-bottom: 1px solid  rgba(128, 128, 128, 0.438);
}

.top swiper {
  height: 100%;
  
}

.top swiper image {
  height: 100%;
  width: 100%;
}

.box .middle{
  height: 150rpx;
  width: 90%;
  border-bottom: 1px solid  rgba(128, 128, 128, 0.438);
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height: 150rpx;
}

.middle image{
  height: 120rpx;
  width: 120rpx;
}

.middle view{
  font-size: 45rpx;
}

.bottom{
  height: 400rpx;
  width: 90%;
}

.view_all{
  font-size:45rpx;
  height:100rpx;
  line-height: 100rpx;
  width:100%;
}

.content{
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  word-break: keep-all;
  word-wrap: break-word;
  white-space: pre-line;
  border-bottom: 1px solid  rgba(128, 128, 128, 0.438);
}
