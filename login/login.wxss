.container{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.container image{
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  border: 1px solid rgba(128, 128, 128, 0.438);
}

.login_form{
  margin-top: 50rpx;
  flex:auto;
  height: 100%;
  width: 90%;
}

.box{
  display: flex;
  flex-direction: row;
  height: 100rpx;
  width: 100%;
  border:  1px solid rgba(128, 128, 128, 0.438);
  border-radius: 50rpx;
  margin-top: 20rpx;
}

.box image{
  height: 80rpx;
  width: 80rpx;
  margin:auto 25rpx;
  border: none;
  border-radius: 0;
}

.box input{
  height: 100rpx;
  width: 100%;
  font-size: 45rpx;
}

.login{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  border:  1px solid rgba(128, 128, 128, 0.438);
  font-size: 45rpx;
}