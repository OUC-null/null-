/**index.wxss**/
.container{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.about_me{
  position: absolute;
  height: 40%;
  width: 95%;
  top: 0px;
  left: auto;
  border: 1px solid rgba(128, 128, 128, 0.438);
}

.img_box{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40%;
}
.img_box image{
  height:150rpx;
  width: 150rpx;
  border-radius: 50%;
  border: 1px solid black;
  margin-top: 2%;
}

.text_box{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 60%;
  left: 3%;
}

.info_box{
  width: 95%;
  overflow: hidden;
  display: block;
  white-space: nowrap;
  text-overflow:ellipsis;
}

.details{
  position: absolute;
  display: flex;
  flex-direction: column;
  height: 60%;
  width: 95%;
}

.details_box{
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 15%;
  width: 100%;
  top:35%;
  margin-top: 3%;
  left: auto;
  border-bottom:1px solid rgba(128, 128, 128, 0.438);
  background: none;
}

button::before{
  border: none;
}

button::after{
  border: none;
}

.details_box image{
  height: 70rpx;
  width: 70rpx;
  margin: 3%;
}

.details_box text{
  font-size: 35rpx;
}

.logout_box{
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  bottom: 20rpx;
  width: 200rpx;
  height: 80rpx;
}

.logout_box button{
  width: 200rpx;
  height: 70rpx;
  line-height: 100rpx;
  background: red;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 35rpx;
}
