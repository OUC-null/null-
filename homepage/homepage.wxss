.container{
  width: 100%;
  height: 100%;
}

.search_container{
  position: absolute;
  height: 6%;
  width:95%;
  top: 0;
  margin: auto;
  border: 1px solid  rgba(128, 128, 128, 0.438);
  border-radius: 20px;
}

.search{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search image{
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 2%; 
}

.container .show{
  position:relative; 
}

.empty{
 width: 80%;
 margin:20rpx auto;
 text-align: center;
 font-size: 30rpx;
}

.box_top{
  height: 100rpx;
  width: 99%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.box_top image{
  position: absolute;
  height:75rpx;
  width: 75rpx;
  margin-top: 4%;
  left: 2%;
  border-radius: 50%;
  border: 1px solid black;
}

.text_box{
  position: absolute;
  display: flex;
  flex-direction: column;
  height: 20%;
  width: 63%;
  left: 15%;
  top: 5%;
  font-size: 35rpx;
}

.box_top .text1{
  position: absolute;
  font-size: 65rpx;
  height: 120rpx;
  width: 120rpx;
  border: 1px solid black;
  border-radius: 50%;
  right: 3%;
  top: 3%;
  text-align: center;
  line-height: 120rpx;
}

.box_middle{
  margin-top: 5%;
  width: 100%;
  height: 200rpx;
}

.box_middle swiper{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  margin:0 auto;
}

.box_middle image{
  height: 200rpx; 
  /* width: 300rpx;
  border: 1px solid black; */
  /* display: flex;
  justify-content: center;
  align-items: center; */
}

.box_bottom{
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 2%;
  margin-left: 3%;
}

.box_bottom view{
  font-size: 35rpx;
}

.time{
  display: flex;
  flex-direction:row-reverse;
  right: 3%;
  font-size: 35rpx;
  height: 30rpx;
  width: 100%;
  margin-bottom: 3%;
}